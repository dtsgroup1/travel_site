<form action="/trip/create" method="POST" >
  <h2>Plan a Trip</h2>
  <h3>Locations are direct flights from local Eppley Airfield.</h3>

  <input type="date" placeholder="Departure Date (mm/dd/yyyy)" name="departureDate" ><br />
  <input type="hidden" value=OMA name="origin" >
  <input type="text" placeholder="Destination Airport Code" name="destination" ><br />
  <input type="text" placeholder="Customer ID Number" name="owner" ><br />
  <h4>Save Trip</h4>
  <input class="btn btn-success" type="submit" value="Save" />
</form>

